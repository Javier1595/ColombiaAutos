<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Organismo" table="organismo">
    <indexes>
      <index name="ciudad_organismo" columns="cod_ciudad"/>
    </indexes>
    <id name="codOrganismo" type="string" column="cod_organismo" length="5">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nombreOrganismo" type="string" column="nombre_organismo" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="telefonoOrganismo" type="string" column="telefono_organismo" length="10" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="codCiudad" target-entity="Ciudad" fetch="LAZY">
      <join-columns>
        <join-column name="cod_ciudad" referenced-column-name="cod_ciudad"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
