<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Vehiculo" table="vehiculo">
    <indexes>
      <index name="vehiculo_imp" columns="cod_importacion"/>
      <index name="vehiculo_modelo" columns="cod_modelo"/>
      <index name="vehiculo_carroceria" columns="cod_carroceria"/>
      <index name="vehiculo_color" columns="cod_color"/>
    </indexes>
    <id name="placa" type="string" column="placa" length="7">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nroChasis" type="string" column="nro_chasis" length="17" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="nroSerie" type="string" column="nro_serie" length="17" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="capacidadPersonas" type="string" column="capacidad_personas" length="3" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="servicio" type="string" column="servicio" length="10" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="puertas" type="string" column="puertas" length="3" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="codModelo" target-entity="Linea" fetch="LAZY">
      <join-columns>
        <join-column name="cod_modelo" referenced-column-name="cod_modelo"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="codCarroceria" target-entity="Carroceria" fetch="LAZY">
      <join-columns>
        <join-column name="cod_carroceria" referenced-column-name="cod_carroceria"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="codImportacion" target-entity="Importacion" fetch="LAZY">
      <join-columns>
        <join-column name="cod_importacion" referenced-column-name="cod_importacion"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="codColor" target-entity="Color" fetch="LAZY">
      <join-columns>
        <join-column name="cod_color" referenced-column-name="cod_color"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="nroMotor" target-entity="Motor" inversed-by="placa" fetch="LAZY">
      <join-table name="motor_vehiculo">
        <join-columns>
          <join-column name="placa" referenced-column-name="placa"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="nro_motor" referenced-column-name="nro_motor"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
